{% extends '@App/admin/admin.html.twig' %}

{% block body %}
    <div class="table-responsive">
        <div class="widget">
            <div class="widget-body">
                <div class="header">
                    <div class="col-sm-6">
                        <form class="form-horizontal" action="{{ path('searchForBreweries') }}" method="post">
                            <div class="col-sm-6">
                            <span class="input-icon icon-right">
                                <input type="text" class="form-control input-sm" id="search" name="name" placeholder="Search for Brewery"/>
                                <i class="glyphicon glyphicon-search blue"></i>
                            </span>
                            </div>
                        </form>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                    <th>Name</th>
                    <th class="hidden-xs">Website</th>
                    <th class="hidden-xs">Year Established</th>
                    <th></th>
                    </thead>
                    <tbody>
                    {% if breweries %}
                        <tr>
                            <th colspan="4">Breweries found in App</th>
                        </tr>
                    {% endif %}
                    {% for brewery in breweries %}
                        <tr>
                            <td>{{ brewery.getName() }}</td>
                            <td class="hidden-xs">{{ brewery.getWebsite() }}</td>
                            <td class="hidden-xs">{{ brewery.getYear() }}</td>
                            {#
                            <td>
                                <a href="{{ path('listBeers', { 'tap_id': tap.getID()}) }}" class="btn btn-sm btn-default">Manage Beers</a>
                                <a href="{{ path('editTap', { 'tap_id': tap.getID()}) }}" class="btn btn-sm btn-default">Edit Tap</a>
                                <a href="{{ path('deleteTapConfirm', { 'tap_id': tap.iD}) }}" class="btn btn-sm btn-default">Delete</a>
                            </td>
                            #}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock body %}

