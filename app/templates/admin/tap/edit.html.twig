{% extends '@App/admin/tap/list.html.twig' %}

{% block body %}
<div class="widget">
    <div class="widget-body">
        <form role="form" action="{{ path('saveTap') }}" method="post">
            <div class="form-group">
                <label for="tap_name">Name</label>
                <input type="text" class="form-control" id="tap_name" name="tap_name" value="{{ tap.getName() }}"/>
            </div>
            <div class="form-group">
                <label for="tap_numberoftaps">Number of beers</label>
                <input type="text" class="form-control" id="tap_numberoftaps" name="tap_numberoftaps" value="{{ tap.getNumberOfTaps() }}"/>
            </div>
            <div class="row">
                <div class="col-sm-offset-2 col-sm-10 text-right">
                    <a href="{{ path('taps') }}" class="btn btn-default">Cancel</a>
                    <button type="submit" name="save" value="true" class="btn btn-primary">Save</button>
                    <button type="submit" name="add_beers" value="true" class="btn btn-blue">Save and Manage Beers</button>
                </div>
            </div>
            <input type="hidden" name="tap_id" value="{{ tap.id }}"/>
            <input type="hidden" name="location_id" value="{{ location.id }}" />
        </form>
    </div>
</div>
{% endblock %}