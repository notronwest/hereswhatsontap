{% extends '@App/admin/tap/list.html.twig' %}

{% block body %}
    <form class="form" role="form" action="{{ path('saveBeers') }}">
        <input type="hidden" name="tap_id" value=""/>
        <div class="form-group">
            <label for="beer-search" class="col-sm-2 control-label no-padding-right">Find Beer</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="beer-search"/>
            </div>
            <div class="col-sm-2">
                <button type="button" id="search">Add</button>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive"
                <table class="table">
                    <thead>
                        <th>Beer</th>
                        <th>Glass</th>
                        <th>Price</th>
                        <th></th>
                    </thead>
                </table>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </form>
{% endblock %}